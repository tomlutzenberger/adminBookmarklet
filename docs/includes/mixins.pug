
mixin metaBootstrap
  meta(charset="utf-8")
  meta(http-equiv="X-UA-Compatible" content="IE=edge")
  meta(name="viewport" content="width=device-width, initial-scale=1")

mixin metaSocial(data)
  meta(name="twitter:card" content=data.twitter.card)
  meta(name="twitter:site" content=data.twitter.site)
  meta(name="twitter:creator" content=data.twitter.creator)
  meta(name="twitter:image" content=data.og.image)
  meta(property="og:image" content=data.og.image)
  meta(property="og:image:height" content="525")
  meta(property="og:image:width" content="1000")
  meta(property="og:description" content=data.og.description)
  meta(property="og:url" content=data.og.url)
  meta(property="og:title" content=data.og.title)

mixin metaFavicon(appName, themeColor, appleThemeColor)
  link(rel="apple-touch-icon" sizes="180x180" href="./apple-touch-icon.png")
  link(rel="icon" type="image/png" sizes="32x32" href="./favicon-32x32.png")
  link(rel="icon" type="image/png" sizes="16x16" href="./favicon-16x16.png")
  link(rel="manifest" href="./manifest.json")
  link(rel="mask-icon" href="./safari-pinned-tab.svg" color=appleThemeColor)
  meta(name="apple-mobile-web-app-title" content=appName)
  meta(name="application-name" content=appName)
  meta(name="theme-color" content=themeColor)

mixin css(href)
  link(href=href rel="stylesheet")

mixin js(src)
  script(src=src)

mixin faIcon(icon)
  if icon.type === 'stacked'
    span.fa-stack&attributes(attributes)
      each value, index in icon.icons
        span.fa(class=`fa-stack-${(index - 2) * -1}x ${value}` aria-hidden="true")
  else
    span.fa(class=icon.icons[0] aria-hidden="true")&attributes(attributes)

mixin aButton(label, title, url, icon)
  a.btn(href=url title=title target="_blank")&attributes(attributes)
    if icon
      +faIcon(icon)
    span.hidden-xs
      | &nbsp;
      = label
  | &nbsp;

mixin navbar(title, navbarTextAlign, navbarIcon)
  .navbar&attributes(attributes)
    .container
      .navbar-header(class=navbarTextAlign !== '' ? `text-${navbarTextAlign}` : '')
        a.navbar-brand(href="/" title=title)
          +faIcon(navbarIcon)(class="app-icon")
          | &nbsp;
          = title

mixin footer(socialButtons)
  footer&attributes(attributes)
    .container
      .row
        .col-xs-6.col-md-12.text-center
          p
            each social in socialButtons
              +aButton(social.label, social.title, social.url, social.icon)(class=`btn-sm btn-${social.key}`)

        .col-xs-6.col-md-12.text-center
          p
            | Made with&nbsp;
            span.color-red
              +faIcon({'type': 'single', 'icons': ['fa-fw fa-heart']})
              span.sr-only
                | ‚ù§
          p
            | &copy; 2017 &ndash; A Project by&nbsp;
            a(href="https://tomlutzenberger.de" title="Open tomlutzenberger.de" target="_blank")
              | Tom Lutzenberger
